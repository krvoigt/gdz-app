<section class="viewer_export">
    <h2 class="viewer_heading">{{ 'Export'|trans }}</h2>

    <div id="PDFprogress" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">{{ 'pdf_headline'|trans }}</h3>
                </div>

                <div class="alert"></div>
                <div id="pdf-range"></div>

                <div class="modal-body">
                    <div class="choose-inner">
                        <div class="step">
                            <div class="step-circle">
                                <span>1</span>
                            </div>
                            <div>
                                <div id="step-circle-one-headline">
                                    <h3>{{ 'pdf_first_step_headline'|trans }}</h3>
                                </div>
                                <div class="input-elements">
                                    <div class="radio">
                                        <input type="radio" checked="checked" name="optradio" value="1000px" id="pdf-resolution-1">
                                        <label for="pdf-resolution-1">{{ 'pdf_first_step_option1'|trans }}</label>
                                    </div>
                                    <div class="radio">
                                        <input type="radio" name="optradio" value="original" id="pdf-resolution-2">
                                        <label for="pdf-resolution-2">{{ 'pdf_first_step_option2'|trans }}</label>
                                    </div>
                                    <div class="radio">
                                        <input type="radio" name="optradio" value="choose-free" id="pdf-resolution-3">
                                        <label for="pdf-resolution-3">{{ 'pdf_first_step_option3'|trans }}</label>
                                        <input type="number" min="1" name="choose-free" id="choose-free"> Pixel
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="step">
                            <div class="step-circle">
                                <span>2</span>
                            </div>
                            <div class="textfields">
                                <h3>{{ 'pdf_second_step_headline'|trans }}</h3>
                                <div id="second-step-under-headline">
                                    <input type="number" min="1" class="pdf-textfields" id="physIDstart" value="1">
                                    {{ 'pdf_until'|trans }}
                                    <input type="number" min="1" class="pdf-textfields" id="physIDend" value={{ pageCount }}>
                                    <div class="end-page-range-full-pages">
                                        {{ 'pdf_from'|trans }} {{ pageCount }} {{ 'pdf_pages'|trans }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="progress-wrapper">
                        <div class="progress-item-top-wrapper">
                            <div class="progress-item-top">
                                <span class="progress-item-headline">{{ 'pdf_preparing'|trans }}</span>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-sbb progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                        <span class="progress-text">0%</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="progress-item-bottom">
                            <span class="notice-pdfProgress">{{ 'pdf_progress_hint_headline'|trans }}</span>
                            <span> <br>{{ 'pdf_progress_hint'|trans }}</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="download-pdf" data-ppn="{{ document.id }}">{{ 'Generate PDF'|trans }}</button>
                </div>
            </div>
        </div>
    </div>
</section>
